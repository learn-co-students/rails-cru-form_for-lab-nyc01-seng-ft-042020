<h1>Song Form</h1>
<%= form_for @song do |f| %>
<%= f.label :name, "Name" %>
<%= f.text_field :name %>

<%= f.label :artist_id, "Artist" %>
<%= f.number_field :artist_id %>

<%= f.label :genre_id, "Genre" %>
<%= f.number_field :genre_id %>

<%= submit_tag "#{@song.new_record? ? 'Create' : 'Update'} Song" %>
<% end %>
